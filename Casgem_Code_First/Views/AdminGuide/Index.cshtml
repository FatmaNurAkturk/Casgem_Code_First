@model List<Casgem_Code_First.DAL.Entities.Guide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Rehber Listesi</h2>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Rehber Adı</th>
        <th>Unvan</th>
        <th>Fotoğraf</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.GuideID</td>
    <td>@item.GuideName</td>
    <td>@item.GuideTitle</td>
    <td>@item.GuideImageUrl</td>
    <td><a href="/AdminGuide/DeleteGuide/@item.GuideID" class="btn btn-danger">Sil</a></td>
    <td><a href="/AdminGuide/GuideUpdate/@item.GuideID" class="btn btn-success">Güncelle</a></td>
</tr>}
</table>
<a href="/AdminGuide/AddGuide" class="btn btn-primary">Yeni Rehber Ekle</a>

